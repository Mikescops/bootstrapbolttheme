{% extends '_master.twig' %}
{% block main %}

    <!-- Header bar -->

    <div class="headerphoto">
        <img src="{{ asset('img/slide-03.jpg', 'theme') }}" width="100%" height="350" />
    </div>
<br>
    <!-- End header -->

    <div class="container marketing">

      <!-- Three columns of text below the carousel -->
      <div class="row" style="margin-top: 10px;">
      	{% setcontent records = "entries/latest/3" allowpaging %}
      	{% for record in records %}
        <div class="span4" style="text-align: center;">

        	{% if record.image!="" %}
          <a href="{{ image(record.image) }}"><img class="img-circle fancybox" src="{{ thumbnail(record.image, 150, 150) }}"></a>
          {% endif %}

          <h2><a href="{{ record.link }}">{{ record.title }}</a></h2>

          <p>{{ record.excerpt(220) }}</p>

          <p><a class="btn" href="{{ record.link }}">Read More &raquo;</a></p>
        </div><!-- /.span4 -->
        {% endfor %}
        
      </div><!-- /.row -->

  </div>

  <!-- End Main Content and Sidebar -->

  <hr>

{% endblock main %}
